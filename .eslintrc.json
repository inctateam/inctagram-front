{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "@it-incubator/eslint-config",
    "plugin:storybook/recommended"
  ],
  "overrides": [
    {
      "files": ["*.stories.tsx"],
      "rules": {
        "react-hooks/rules-of-hooks": "off"
      }
    },
    {
      "files": ["*.mdx"],
      "parser": "eslint-mdx",
      "extends": ["plugin:mdx/recommended"],
      "rules": {
        "import/namespace": "off",
        "react/jsx-curly-brace-presence": "off"
      }
    }
  ]
}
